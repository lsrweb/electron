{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@m/*": ["src/main/*"]
    }
  },
  "include": [
    "src/main/**/*.ts",
    "src/main/package/**/*.ts",
    "src/main/**/*.d.ts",
    "forge.env.d.ts",
    "vite.base.config.ts",
    "vite.main.config.ts"
  ],
  "exclude": ["node_modules", "dist", "public", "tests", ".vite"]
}
