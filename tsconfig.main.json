{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsxImportSource": "vue",

    "baseUrl": ".",
    "paths": {
      "@m/*": ["src/main/*"]
    }
  },
  "include": ["src/main/**/*", "src/main/**/*.ts", "forge.env.d.ts"],
  "exclude": ["node_modules", "dist", "public", "tests", ".vite"]
}
