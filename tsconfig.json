{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@r/*": ["src/render_/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "forge.env.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  // 排除
  "exclude": ["node_modules", "dist", "public", "tests", ".vite"]
}
