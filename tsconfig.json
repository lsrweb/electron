{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@r/*": ["src/render_/*"]
    },
    "types": ["element-plus/global","node"]
  },
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "src/render_/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.js",
    "./**/*.d.ts",
    "./**/*.jsx",
    "./**/*.ts",
  ],
  // 排除
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "tests",
    "tsconfig.json",
    "tsconfig.build.json",
    "tsconfig.test.json",
  ]
}
 